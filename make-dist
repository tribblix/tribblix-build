#!/bin/sh

THOME=/packages/localsrc/Tribblix

TDIR=${THOME}/tribblix-build
case `uname -p` in
sparc)
	$TDIR/install-pkgs $*
	;;
i386)
	$TDIR/install-pkgs $*
	;;
*)
	echo "ERROR: unrecognized architecture"
	exit 1
	;;
esac

case `uname -p` in
sparc)
	$TDIR/mk-pkgs-zap.sparc $*
	;;
i386)
	$TDIR/mk-pkgs-zap $*
	;;
esac

$TDIR/build_iso $*
